{
  "manifest_version": 2,
  "name": "Note Taker",
  "version": "1.0",
  "description": "Simple note-taking extension",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Take a note"
  },
  "commands": {
    "take-note": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "MacCtrl+Shift+N"
      },
      "description": "Take a note"
    }
  }
}
